<group name="syslog,honeypot,application-honeypot,json">
  <rule id="100100" level="5">
    <decoded_as>honeypot-syslog</decoded_as>
    <action>connection</action>
    <description>Honeypot '$(server)' - Connessione rilevata da $(src_ip):$(src_port) → $(dest_ip):$(dest_port)</description>
  </rule>
  
  <rule id="100101" level="7">
    <decoded_as>honeypot-syslog</decoded_as>
    <action>login</action>
    <status>failed</status>
    <description>Honeypot '$(server)' - Login fallito da $(src_ip):$(src_port) → $(dest_ip):$(dest_port) - utente '$(username)' password '$(password)'</description>
  </rule>
  
  <rule id="100102" level="7">
    <decoded_as>honeypot-syslog</decoded_as>
    <action>login</action>
    <status>success</status>
    <description>Honeypot '$(server)' - Login con credenziali corrette da $(src_ip):$(src_port) → $(dest_ip):$(dest_port) - utente '$(username)' password '$(password)'</description>
  </rule>
  
  <rule id="100103" level="7">
    <decoded_as>honeypot-syslog</decoded_as>
    <action>command</action>
    <!--
      NB: The "data" field conflicts with an existing field in the Wazuh indexer,
      so in the Filebeat ingestion pipeline we rename it to "info" so that
      it can be successfully saved in the indexer. To access the value here, in the
      description, you should still use "data.", since the renaming happens afterwards.
    -->
    <description>Honeypot '$(server)' - Ricevuto comando '$(data.cmd)' args: '$(data.args)' da $(src_ip):$(src_port) → $(dest_ip):$(dest_port)</description>
  </rule>
</group>
